{
    "name": "hofi/belajar-php-unit-test",
    "description": "Belajar PHP Unit Test",
    "type": "project",
    "authors": [
        {
            "name": "Gusti Alifiraqsha",
            "email": "alifiraqshaakbar@gmail.com"
        }
    ],
    "require": {
        "php" : ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "9.5.5"
    },
    "autoload": {
        "psr-4": {
            "hofi\\Test\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "hofi\\Test\\" : "tests"
        }
    },
    "scripts": {
        "tests" : "phpunit --configuration phpunit.xml",
        "tests:product" : "phpunit --configuration phpunit.xml --testsuite product",
        "tests:counter" : "phpunit --configuration phpunit.xml --testsuite counter"
    }
}
